<div class="card product-card m-x-auto">
  {{#link-to "product.show" product.id}}
    <div class="card-image">
      {{#if product.images.length}}
        <img class="card-img-top" src={{product.images.firstObject.image.url}}>
      {{else}}
        <img class="card-img-top" src="/default.png">
      {{/if}}
    </div>
  {{/link-to}}
  <div class="card-block">
    <h6 class="card-title">
      {{#link-to "product.show" product.id}}
        {{product.name}}
      {{/link-to}}
    </h6>
    <p class="card-text">{{product.briefDescription}}</p>
  </div>
</div>
