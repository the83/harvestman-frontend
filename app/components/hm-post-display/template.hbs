<div class="post-card">
  <div class="post-title">
    <h3>
      {{#link-to "post.show" post.id}}
        {{post.title}}
      {{/link-to}}
    </h3>

    <h6 class="date">
      <i>{{post.date}}</i>
    </h6>
  </div>
  {{#if post.heroImage}}
    {{#link-to "post.show" post.id}}
      <div class="card-image">
          <img src={{post.heroImage}} alt={{post.title}}>
      </div>
    {{/link-to}}
  {{/if}}
  <p class="post-content">{{{expandLinebreaks post.content}}}</p>
</div>
