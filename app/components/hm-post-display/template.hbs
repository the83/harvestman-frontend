<div class="post-card">
  <div class="post-title">
    <h3>{{post.title}}</h3>

    <h6 class="date">
      <i>{{post.date}}</i>
    </h6>
  </div>
  {{#link-to "post.show" post.id}}
    <div class="card-image">
      <img src={{post.heroImage}} alt={{post.title}}>
    </div>
  {{/link-to}}
  <p class="post-content">{{post.content}}</p>
</div>
