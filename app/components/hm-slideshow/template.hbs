<div
  id="{{slideshowId}}"
  class="carousel slide hm-slideshow"
  data-ride="carousel"
  data-interval="5000"
>
  <ol class="carousel-indicators">
    {{#each images as |image index|}}
      <li data-target="#carousel-example-generic" data-slide-to={{index}} class="active"></li>
    {{/each}}
  </ol>
  <div class="carousel-inner" role="listbox">
    {{#each images as |image|}}
      <div class="carousel-item">
        <img src={{image.url}}>
      </div>
    {{/each}}
  </div>
  <a class="left carousel-control" href="{{elementId}}" role="button" data-slide="prev">
    <span class="icon-prev" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="{{elementId}}" role="button" data-slide="next">
    <span class="icon-next" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
