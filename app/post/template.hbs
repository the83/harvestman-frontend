<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/">Home</a>
        </li>
        <li class="breadcrumb-item active">
          News
        </li>
        {{#if model.isAuthenticated}}
          {{#link-to 'post.new' class='btn btn-success pull-sm-right'}}
            New Post
          {{/link-to}}
        {{/if}}
      </ol>
    </div>
  </div>

  {{#each model.posts as |post|}}
    <div class="row">
      <div class="col-sm-12">
        {{hm-post-display post=post}}
      </div>
    </div>
  {{/each}}
</div>
